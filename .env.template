# PROFESSIONAL MERGE-BOT ENHANCED CONFIGURATION FILE
# Copy this file to .env and fill in your values

# =================================
# CORE TELEGRAM CONFIGURATION (REQUIRED)
# Get these from https://my.telegram.org
# =================================
API_HASH=your_api_hash_from_telegram_org
BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_API=your_api_id_from_telegram_org

# =================================
# BOT OWNER CONFIGURATION (REQUIRED)
# =================================
OWNER=your_telegram_user_id_number
OWNER_USERNAME=your_telegram_username_without_@
PASSWORD=your_secure_bot_password

# =================================
# DATABASE CONFIGURATION (REQUIRED)
# For Docker: mongodb://mergebot:mergebot123@mongodb:27017/mergebot?authSource=admin
# For external MongoDB: your_mongodb_connection_string
# =================================
DATABASE_URL=mongodb://mergebot:mergebot123@mongodb:27017/mergebot?authSource=admin

# =================================
# GOFILE CONFIGURATION (PROFESSIONAL FEATURE)
# Get token from https://gofile.io (optional but recommended for unlimited uploads)
# =================================
GOFILE_TOKEN=your_gofile_api_token_here

# =================================
# OPTIONAL CONFIGURATIONS
# =================================

# Log Channel (optional) - Add "-100" + channel ID for supergroups
# Example: -1001234567890
LOGCHANNEL=

# Premium account session string for 4GB uploads (optional)
USER_SESSION_STRING=

# =================================
# PROFESSIONAL FEATURES CONTROL
# =================================

# Enable GoFile unlimited uploads (true/false)
ENABLE_GOFILE_UPLOAD=true

# Enable custom thumbnail support (true/false)
ENABLE_CUSTOM_THUMBNAILS=true

# Enable metadata editing features (true/false)
ENABLE_METADATA_EDITING=true

# =================================
# PERFORMANCE SETTINGS
# =================================

# Maximum concurrent users (default: 5)
MAX_CONCURRENT_USERS=5

# Maximum file size in bytes (default: 2GB = 2147483648)
MAX_FILE_SIZE=2147483648

# FFmpeg processing threads (default: 2, increase for better performance)
FFMPEG_THREADS=2

# Auto cleanup interval in seconds (default: 3600 = 1 hour)
CLEANUP_INTERVAL=3600

# =================================
# DOCKER CONFIGURATION (FOR DOCKER SETUP)
# =================================

# MongoDB password (for Docker setup)
MONGO_PASSWORD=mergebot123

# MongoDB UI password (for Docker setup)
MONGO_UI_PASSWORD=admin123

# Timezone
TZ=Asia/Kolkata

# =================================
# ADVANCED GOFILE SETTINGS (OPTIONAL)
# Only change if you know what you're doing
# =================================

# GoFile chunk size for uploads (default: 8MB)
# GOFILE_CHUNK_SIZE=8388608

# GoFile upload timeout in seconds (default: 3600)
# GOFILE_UPLOAD_TIMEOUT=3600

# GoFile retry attempts (default: 3)
# GOFILE_RETRY_ATTEMPTS=3

# GoFile retry wait time in seconds (min: 2, max: 10)
# GOFILE_RETRY_WAIT_MIN=2
# GOFILE_RETRY_WAIT_MAX=10

# =================================
# QUALITY SETTINGS
# =================================

# Default video quality (default: high)
# Options: low, medium, high, ultra
DEFAULT_VIDEO_QUALITY=high

# Preserve original video quality (true/false)
PRESERVE_ORIGINAL_QUALITY=true

# Enable hardware acceleration (true/false)
# Note: Requires compatible hardware
ENABLE_HARDWARE_ACCELERATION=false

# =================================
# SECURITY SETTINGS
# =================================

# Enable user authentication (true/false)
ENABLE_USER_AUTH=true

# Enable admin commands (true/false)
ENABLE_ADMIN_COMMANDS=true

# Enable logging (true/false)
ENABLE_DETAILED_LOGGING=true

# =================================
# UI/UX SETTINGS
# =================================

# Bot welcome message language (en/hi/auto)
BOT_LANGUAGE=en

# Enable progress bars (true/false)
ENABLE_PROGRESS_BARS=true

# Enable professional UI (true/false)
ENABLE_PROFESSIONAL_UI=true

# =================================
# BACKUP & RECOVERY
# =================================

# Auto backup interval in hours (0 to disable)
AUTO_BACKUP_INTERVAL=24

# Backup location (local/cloud)
BACKUP_LOCATION=local

# =================================
# MONITORING & ANALYTICS
# =================================

# Enable performance monitoring (true/false)
ENABLE_MONITORING=true

# Enable usage analytics (true/false)
ENABLE_ANALYTICS=false

# =================================
# DEPRECATED/REMOVED FEATURES
# These are no longer supported in professional version
# =================================

# GDRIVE_FOLDER_ID - Removed (use GoFile instead)
# CONFIG_FILE_URL - Removed (use .env file)
# UPSTREAM_REPO - Removed (static deployment)
# Any rclone configurations - Removed (use GoFile)

