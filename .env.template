# MERGE-BOT Enhanced Configuration File
# Copy this file to .env and fill in your values

# =================================
# TELEGRAM API CONFIGURATION
# Get these from https://my.telegram.org
# =================================
API_HASH=your_api_hash_here
BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_API=your_api_id_here

# =================================
# BOT OWNER CONFIGURATION
# =================================
OWNER=your_telegram_user_id
OWNER_USERNAME=your_telegram_username
PASSWORD=your_bot_password

# =================================
# DATABASE CONFIGURATION
# For Docker: mongodb://mergebot:mergebot123@mongodb:27017/mergebot?authSource=admin
# For external MongoDB: your_mongodb_connection_string
# =================================
DATABASE_URL=mongodb://mergebot:mergebot123@mongodb:27017/mergebot?authSource=admin

# =================================
# GOFILE CONFIGURATION (NEW!)
# Get token from https://gofile.io (optional but recommended)
# =================================
GOFILE_TOKEN=your_gofile_api_token_here

# =================================
# OPTIONAL CONFIGURATIONS
# =================================

# Log Channel (optional) - Add "-100" + channel ID
# Example: -1001234567890
LOGCHANNEL=

# Google Drive folder ID (optional)
GDRIVE_FOLDER_ID=root

# Premium account session string for 4GB uploads (optional)
USER_SESSION_STRING=

# Remote config URL (optional)
CONFIG_FILE_URL=

# Upstream repository for updates (optional)
UPSTREAM_REPO=https://github.com/yashoswalyo/MERGE-BOT
UPSTREAM_BRANCH=master

# =================================
# ADVANCED SETTINGS
# =================================

# Maximum concurrent users (default: 5)
MAX_CONCURRENT_USERS=5

# Maximum file size in bytes (default: 2GB)
MAX_FILE_SIZE=2147483648

# MongoDB password (for Docker setup)
MONGO_PASSWORD=mergebot123

# MongoDB UI password (for Docker setup)
MONGO_UI_PASSWORD=admin123

# Timezone
TZ=Asia/Kolkata

# =================================
# GOFILE SETTINGS (ADVANCED)
# =================================

# GoFile chunk size for uploads (default: 8MB)
# GOFILE_CHUNK_SIZE=8388608

# GoFile upload timeout (default: 3600 seconds)
# GOFILE_UPLOAD_TIMEOUT=3600

# GoFile retry attempts (default: 3)
# GOFILE_RETRY_ATTEMPTS=3
